{
  "name": "the-steward",
  "version": "2.0.0",
  "description": "Local-first AI coordination system that intelligently routes tasks to appropriate AI models",
  "main": "steward.js",
  "bin": {
    "steward": "./steward.js",
    "steward-enhanced": "./steward-enhanced.js"
  },
  "scripts": {
    "start": "node steward.js",
    "enhanced": "node steward-enhanced.js",
    "migrate": "node migrate.js",
    "status": "pgrep -f 'steward.*node' > /dev/null && echo 'Running' || echo 'Stopped'",
    "test": "jest",
    "test:routing": "jest src/core/routing-engine.test.js",
    "test:database": "node database/test-integration.js",
    "dev": "node --inspect steward-enhanced.js",
    "lint": "echo 'Linting not configured yet'",
    "db:migrate": "node database/migrate.js",
    "db:reset": "node database/migrate.js reset",
    "db:stats": "node database/migrate.js stats",
    "db:import": "node database/import-character-sheet.js",
    "db:test": "node database/test-integration.js",
    "start-all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "stop-all": "pkill -f 'steward.*node' || true",
    "start:backend": "cd web-interface/backend && npm start",
    "start:frontend": "cd web-interface/frontend && npm start",
    "start-daemon": "nohup npm run start-all > logs/steward.log 2>&1 &",
    "stop-daemon": "pkill -f 'steward.*node' || pkill -f 'npm.*start-all'",
    "service:start": "./service-manager.sh start",
    "service:stop": "./service-manager.sh stop",
    "service:restart": "./service-manager.sh restart",
    "service:status": "./service-manager.sh status",
    "service:monitor": "./service-manager.sh monitor",
    "service:install": "./service-manager.sh install",
    "service:uninstall": "./service-manager.sh uninstall",
    "health": "node health-check.js",
    "health:watch": "watch -n 30 'npm run health'",
    "recover": "node auto-recovery.js"
  },
  "keywords": [
    "ai",
    "routing",
    "cli",
    "local-first",
    "automation",
    "assistant"
  ],
  "author": "Chip Talbert",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@notionhq/client": "^4.0.2",
    "dotenv": "^17.2.0",
    "js-yaml": "^4.1.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "jest": "^30.0.5"
  },
  "repository": {
    "type": "git",
    "url": "local"
  }
}
